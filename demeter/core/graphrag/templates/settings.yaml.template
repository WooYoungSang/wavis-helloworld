# GraphRAG Configuration Template for {{PROJECT_NAME}}
# This file configures the GraphRAG knowledge management system for enhanced development context

encoding_model: cl100k_base
skip_workflows: []

# Large Language Model Configuration
llm:
  api_key: ${GRAPHRAG_API_KEY}
  type: openai_chat
  model: gpt-4o-mini  # Cost-effective model for development
  model_supports_json: true
  api_base: https://api.openai.com/v1
  api_version: 2024-02-15-preview
  tokens_per_minute: 150_000
  requests_per_minute: 10_000
  max_retries: 10
  max_retry_wait: 10.0
  sleep_on_rate_limit_recommendation: true
  concurrent_requests: 5

# Parallelization Settings
parallelization:
  stagger: 0.3
  num_threads: 50

async_mode: threaded

# Embeddings Configuration
embeddings:
  async_mode: threaded
  llm:
    api_key: ${GRAPHRAG_API_KEY}
    type: openai_embedding
    model: text-embedding-3-small  # Cost-effective embedding model
    api_base: https://api.openai.com/v1
    api_version: 2024-02-15-preview
    tokens_per_minute: 150_000
    requests_per_minute: 10_000
    max_retries: 10
    max_retry_wait: 10.0
    sleep_on_rate_limit_recommendation: true
    concurrent_requests: 10
    batch_size: 16
    batch_max_tokens: 8191

# Text Chunking Configuration
chunks:
  size: 1200  # Optimized for technical documentation
  overlap: 100  # Ensures context preservation
  group_by_columns: [id]

# Input Configuration
input:
  type: file
  file_type: text
  base_dir: "input"
  file_encoding: utf-8
  file_pattern: ".*\\.txt$"

# Cache Configuration
cache:
  type: file
  base_dir: "cache"

# Storage Configuration
storage:
  type: file
  base_dir: "output"

# Reporting Configuration
reporting:
  type: file
  base_dir: "logs"

# Entity Extraction Configuration
entity_extraction:
  prompt: "prompts/extract_graph.txt"
  entity_types: [
    "functional_requirement",
    "non_functional_requirement",
    "unit_of_work",
    "acceptance_criteria",
    "component",
    "service",
    "api_endpoint",
    "data_model",
    "configuration",
    "deployment_target"
  ]
  max_gleanings: 2

# Description Summarization
summarize_descriptions:
  prompt: "prompts/summarize_descriptions.txt"
  max_length: 500
  strategy:
    type: graph_intelligence

# Community Reports Configuration
community_reports:
  prompt: "prompts/community_report.txt"
  max_length: 2000
  max_input_length: 8000
  strategy:
    type: graph_intelligence

# Claim Extraction (disabled for technical docs)
claim_extraction:
  enabled: false

# Local Search Configuration
local_search:
  text_unit_prop: 0.5
  community_prop: 0.1
  conversation_history_max_turns: 5
  top_k_mapped_entities: 10
  top_k_relationships: 10
  max_tokens: 12_000

# Global Search Configuration
global_search:
  max_tokens: 12_000
  data_max_tokens: 12_000
  map_max_tokens: 1_000
  reduce_max_tokens: 2_000
  concurrency: 32

# Custom Configuration for {{PROJECT_NAME}} Project
project_specific:
  project_name: "{{PROJECT_NAME}}"
  language: "{{LANGUAGE}}"

  # Additional entity types (can be customized based on project needs)
  additional_entities:
    - "http_endpoint"
    - "middleware"
    - "authentication_method"
    - "database_schema"
    - "service_boundary"
    - "event_type"
    - "external_api"
    - "configuration_option"